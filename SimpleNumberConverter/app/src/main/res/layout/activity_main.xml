<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="7">
        <TextView
                android:text="Bin"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/binLabel" android:layout_weight="5"
                android:textSize="30dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/binText" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="7">
        <TextView
                android:text="Dec"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/decLabel" android:layout_weight="5"
                android:textSize="30dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/decText" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="7">
        <TextView
                android:text="Hex"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/hexLabel" android:layout_weight="5"
                android:textSize="30dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/hexText" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="7">
        <Button
                android:text="BIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/binBT" android:layout_weight="1"/>
        <Button
                android:text="DEC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/decBT" android:layout_weight="1"/>
        <Button
                android:text="HEX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/hexBT" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Simple\n\t\t\tNumber\n\t\t\t\t\t\tConverter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="50dp" android:layout_weight="2.5"/>

</LinearLayout>